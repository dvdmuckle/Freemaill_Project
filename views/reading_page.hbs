{{#if rows}}
{{#each rows}}


<div class="card blue-grey darken-1" id="Full_Page" style="opacity: 500%" >

  <div class="card-content white-text">
    <br>
    <span          >From: {{sender}}
      <span class="card-title">Subject:  {{subject}}</span>
      <br>
      <br>
      <p>Message:</p>
      <div class="card">
        <div class="card-content">
          <p style="color:black"> {{body}}</p>
        </div>
      </div>
    </div>

    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Reply to: {{sender}}@freemail.com <i class="material-icons right">close</i></span>
      <br>
      <div class="row">
        <form class="col s12" action="/mail/sent" method="post">

          <input type="hidden" name="to" value="{{sender}}">
          <input type="hidden" name="from" value="{{recipient}}">



          <div class="row">
            <div class="input-field col s12">
              <input name="subject" id="subject" type="text" class="validate">
              <label class="active" for="subject">Subject</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12" id="Full_Page">
              <textarea name="message_body" id="message_body" class="materialize-textarea"></textarea>
              <label for="message_body">Message</label>
              <button class="btn right waves-effect waves-light" type="submit" name="action">Send
                <i class="material-icons right">send</i>
              </button>
            </div>
          </div>
        </form>
      </div>

    </div>

    <div class="card-action">
      <a class="activator">REPLY</a>
    </div>
  </div>

  <div class="row" style="position: absolute; right: 2px ; bottom: 0px">

    <a class="btn btn-floating btn-large " href="/mail/createmail"><i class="material-icons">edit</i></a>

  </div>

  {{/each}}

  {{else}}
  <div class="card black darken-1" id="Full_Page" style="opacity: 500%" >
    <div class="row" style="position: absolute; right: 2px ; bottom: 0px">
      <a class="btn btn-floating btn-large " href="/mail/createmail"><i class="material-icons">edit</i></a>
    </div>
  </div>


  {{/if}}
