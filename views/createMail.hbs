<div>
  <div class="card" id="createmail">
  <br>
  <div class="row container">
  <form class="col s12" action="/mail/sent" method="post">
    <div class="row">
        <div class="input-field col s12">
          <h5 class="card-title grey-text">From: {{user.username}}@freemail.com</h5>
          <a class="btn-floating red " style="right: 10px; position: absolute ; color: red" href="/mail/reading_page" ><i class="material-icons">close</i></a>
          <input type="hidden" name="from" value="{{user.username}}">
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
          <input type="text" id="to" name="to">
          <label for="to">To</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
          <input name="subject" id="subject" type="text" class="validate">
          <label class="active" for="subject">Subject</label>
        </div>
    </div>
    <div class="row">
      <div class="input-field col s12" id="Full_Page">
        <textarea name="message_body" id="message_body" class="materialize-textarea"></textarea>
        <label for="message_body">Message</label>
        <button class="btn right waves-effect waves-light" type="submit" name="action">Send
      <i class="material-icons right">send</i>
    </button>
      </div>
    </div>
  </form>
</div>
</div>
</div>
