<div class="container" class="center" style="border: 2px; width: 50%" >
  <div class="row">
    <div class="col s12">
      <div class="card-panel grey lighten-5 z-depth-2">
              <form method="post" action="login">
                <h4 id="Logon_Fonts">Login to Freemail</h4>
                <div>
                  <label id="form_label" for="username">Username</label>
                  <input type="text" id="username" name="username" placeholder="User name" class="validate">
                </div><br>

              <label id="form_label" for="password">Password</label>
              <input type="password" name="password" placeholder="Password"><br><br>

              <div class="center">
              <button class="btn waves-effect waves-light" type="submit" name="action">Log In</button>
            <br>
            <br>
              <a class="btn waves-effect waves-light" href="/signup" >Sign Up Here</a>
              </div>
          </form>
      </div>
  </div>
</div>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}
